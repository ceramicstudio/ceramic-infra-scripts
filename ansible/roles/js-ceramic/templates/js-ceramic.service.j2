[Unit]
Description=js-ceramic Node
After=network-online.target

[Service]
Type=simple
User=ceramic
ExecStart=/home/ceramic/.nvm/versions/node/{{ ceramic_node_version }}/bin/node /home/ceramic/.nvm/versions/node/{{ ceramic_node_version }}/lib/node_modules/@ceramicnetwork/cli/bin/ceramic.js daemon --config {{ data_store_mount_path }}/daemon.config.json
Environment=CERAMIC_ENABLE_EXPERIMENTAL_SYNC=true
Environment=CERAMIC_ENABLE_EXPERIMENTAL_COMPOSE_DB=true
Environment=CERAMIC_RECON_MODE=true
Environment=NODE_OPTIONS=--max-old-space-size=31744
Environment=NODE_ENV=production

Restart=always
RestartSec=1
StartLimitInterval=0
NoNewPrivileges=yes
[Install]
WantedBy=multi-user.target
